<h1><%= @package.name %></h1>
<div>
  <% if @package.picture.attached? %> 
    <img src="<%=(url_for(@package.picture))%>"> 
  <% end  %>
</div>
<h4>Price is $<%= @package.price %></h4>
<h4>Given hours <%= @package.hours %></h4>
<p><%= @package.notes %></p>

<%# <h4>Bookings</h4> %>
<ul>
  <% @package.bookings.each do |booking| %>
    <li><%= booking.user.email %></li>
  <% end %>
</ul>

<% if user_signed_in?%>
 <%= link_to 'Buy Package', bookings_path(package_id: @package.id), method: :post %> |
 <% end %>
<%= link_to 'Back', packages_path %>