<h1><%= @package.name %></h1>
<div>
  <% if @package.picture.attached? %> 
    <img src="<%=(url_for(@package.picture))%>"> 
  <% end  %>
</div>
<h3>Price is $<%= @package.price %></h3>
<h3>Given hours <%= @package.hours %></h3>
<p><%= @package.notes %></p>

<h3>Bookings</h3>
<ul>
  <% @package.bookings.each do |booking| %>
    <li><%= booking.user.email %></li>
  <% end %>
</ul>

<% if user_signed_in?%>
 <%= link_to 'Book Package', payment_path %> |
 <% end %>
<%= link_to 'Back', packages_path %>